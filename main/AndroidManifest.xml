<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caroline.designpatterns" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".BookStore"
            android:label="@string/title_activity_book_store"
            android:windowSoftInputMode="stateHidden|adjustPan" >
        </activity>
        <activity
            android:name=".TheCart"
            android:label="@string/title_activity_the_cart" >
        </activity>
        <activity
            android:name=".AdminBookStore"
            android:label="@string/title_activity_admin_book_store"
            android:windowSoftInputMode="stateHidden|adjustPan" >
        </activity>
        <activity
            android:name=".AddStock"
            android:label="@string/title_activity_add_stock" >
        </activity>
        <activity
            android:name=".ViewReviews"
            android:label="@string/title_activity_view_reviews"
            android:windowSoftInputMode="stateHidden|adjustPan" >
        </activity>
        <activity
            android:name=".CreateReview"
            android:label="@string/title_activity_create_review" >
        </activity>
    </application>

</manifest>
